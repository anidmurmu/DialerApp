<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
            name="bindingVariableBlockedContactUiModel"
            type="com.example.domain.model.ContactUiModel" />
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:padding="8dp"
        android:elevation="16dp"
        android:background="@drawable/bg_card_white">

        <View
            android:id="@+id/viewListener"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/imgBtnMoreOption"/>

        <ImageView
            android:id="@+id/profilePic"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/ic_launcher"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tvFullName"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textColor="#000000"
            android:textSize="18sp"
            android:text="@{bindingVariableBlockedContactUiModel.fullName}"
            android:layout_marginStart="16dp"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintEnd_toStartOf="@id/imgBtnMoreOption"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:id="@+id/tvEmailId"
            android:layout_width="0dp"
            android:layout_height="25dp"
            android:textSize="12sp"
            android:text="@{bindingVariableBlockedContactUiModel.email}"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvFullName"
            app:layout_constraintStart_toEndOf="@id/profilePic"
            app:layout_constraintEnd_toStartOf="@id/imgBtnMoreOption"
            tools:text="This  is demo email id id" />

        <ImageButton
            android:id="@+id/imgBtnMoreOption"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/ic_baseline_more_vert_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>